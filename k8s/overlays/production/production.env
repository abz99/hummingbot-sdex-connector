# Production Environment Configuration
ENVIRONMENT=production
LOG_LEVEL=WARN
STELLAR_NETWORK=MAINNET

# Performance settings - optimized for production load
MAX_CONCURRENT_OPERATIONS=200
REQUEST_TIMEOUT=45
RETRY_ATTEMPTS=5
CIRCUIT_BREAKER_THRESHOLD=10
CONNECTION_POOL_SIZE=25
MAX_CONNECTIONS=100

# Resource limits for production
MEMORY_LIMIT_MB=1536
CPU_LIMIT_MILLICORES=1500
DISK_SPACE_LIMIT_GB=50

# High availability settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
READINESS_CHECK_INTERVAL=15
LIVENESS_CHECK_INTERVAL=30
STARTUP_TIMEOUT=180

# Security settings for production
ENCRYPTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true
SECURITY_MONITORING_ENABLED=true
ENABLE_AUTHENTICATION=true
ENABLE_AUTHORIZATION=true
SESSION_TIMEOUT=3600

# Rate limiting for production (per minute)
RATE_LIMIT_HORIZON_SUBMIT=20
RATE_LIMIT_HORIZON_ACCOUNT=7200
RATE_LIMIT_HORIZON_LEDGER=14400
RATE_LIMIT_HORIZON_TRANSACTION=7200
RATE_LIMIT_SOROBAN_RPC=1200
RATE_LIMIT_EXTERNAL_API=600

# Database settings for production
DATABASE_POOL_SIZE=50
DATABASE_MAX_CONNECTIONS=100
DATABASE_CONNECTION_TIMEOUT=30
DATABASE_QUERY_TIMEOUT=60
DATABASE_IDLE_TIMEOUT=300

# Cache settings for production
REDIS_POOL_SIZE=20
REDIS_CONNECTION_TIMEOUT=10
CACHE_TTL_DEFAULT=600
CACHE_TTL_PRICE_DATA=30
CACHE_TTL_ACCOUNT_DATA=15
CACHE_COMPRESSION_ENABLED=true

# Metrics and monitoring for production
METRICS_ENABLED=true
METRICS_PORT=8000
PROMETHEUS_SCRAPE_INTERVAL=15
DETAILED_METRICS_ENABLED=true
BUSINESS_METRICS_ENABLED=true
PERFORMANCE_METRICS_ENABLED=true

# Trading settings for production
TRADING_ENABLED=true
ARBITRAGE_ENABLED=true
PATH_PAYMENTS_ENABLED=true
SOROBAN_CONTRACTS_ENABLED=true
ADVANCED_ROUTING_ENABLED=true
MEV_PROTECTION_ENABLED=true

# Production feature flags
FEATURE_ADVANCED_ROUTING=true
FEATURE_MEV_PROTECTION=true
FEATURE_CROSS_CHAIN_ARBITRAGE=false
FEATURE_YIELD_FARMING=true
FEATURE_LIQUIDITY_MINING=true
FEATURE_AUTOMATED_REBALANCING=true

# Business KPI targets for production
KPI_DAILY_VOLUME_TARGET=50000
KPI_ORDER_FILL_RATE_TARGET=0.995
KPI_API_UPTIME_TARGET=0.9999
KPI_COST_PER_TRANSACTION_TARGET=0.0005
KPI_ARBITRAGE_SUCCESS_RATE_TARGET=0.85

# Alert thresholds for production
ALERT_ERROR_RATE_WARNING=0.01
ALERT_ERROR_RATE_CRITICAL=0.05
ALERT_LATENCY_WARNING=2.0
ALERT_LATENCY_CRITICAL=5.0
ALERT_MEMORY_WARNING=0.70
ALERT_MEMORY_CRITICAL=0.85
ALERT_CPU_WARNING=0.70
ALERT_CPU_CRITICAL=0.85

# External service URLs for production
HORIZON_MAINNET_URL=https://horizon.stellar.org
SOROBAN_RPC_MAINNET_URL=https://soroban-rpc.mainnet.stellar.gateway.fm
BACKUP_HORIZON_URL=https://horizon-backup.stellar.org
BACKUP_SOROBAN_URL=https://soroban-rpc-backup.mainnet.stellar.gateway.fm

# Observability settings for production
OBSERVABILITY_COLLECTION_INTERVAL=15
OBSERVABILITY_DATA_RETENTION=90d
OBSERVABILITY_ENABLE_TRACING=true
OBSERVABILITY_TRACE_SAMPLING_RATE=0.1
OBSERVABILITY_ENABLE_PROFILING=false
OBSERVABILITY_LOG_STRUCTURED=true
OBSERVABILITY_LOG_FORMAT=json

# Compliance settings for production
COMPLIANCE_AUDIT_ENABLED=true
COMPLIANCE_LOGGING_LEVEL=INFO
COMPLIANCE_DATA_RETENTION=7_years
REGULATORY_REPORTING_ENABLED=true
AML_MONITORING_ENABLED=true

# Backup and disaster recovery
BACKUP_ENABLED=true
BACKUP_INTERVAL=1h
BACKUP_RETENTION=30d
BACKUP_ENCRYPTION_ENABLED=true
DISASTER_RECOVERY_ENABLED=true

# Auto-scaling settings
AUTO_SCALING_ENABLED=true
AUTO_SCALING_MIN_REPLICAS=3
AUTO_SCALING_MAX_REPLICAS=15
AUTO_SCALING_CPU_THRESHOLD=60
AUTO_SCALING_MEMORY_THRESHOLD=70
AUTO_SCALING_SCALE_DOWN_STABILIZATION=600
AUTO_SCALING_SCALE_UP_STABILIZATION=120