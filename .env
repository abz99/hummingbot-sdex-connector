# Environment Variables for Auto-Accept Configuration
# Source this file to eliminate all prompts: source .env

# Git auto-accept
export GIT_AUTO_ACCEPT=true
export GIT_ASKPASS=true

# Python package management auto-accept
export PIP_YES=1
export PIP_QUIET=1
export PIP_NO_INPUT=1
export PIP_DISABLE_PIP_VERSION_CHECK=1
export PYTHONDONTWRITEBYTECODE=1

# System package management auto-accept  
export DEBIAN_FRONTEND=noninteractive
export APT_LISTCHANGES_FRONTEND=none
export UCF_FORCE_CONFFOLD=1

# Development tools auto-accept
export PYTEST_AUTO_ACCEPT=true
export MYPY_NO_ERROR_SUMMARY=1
export MYPY_QUIET=1
export BLACK_QUIET=1
export FLAKE8_QUIET=1

# Claude Code specific
export CLAUDE_NO_CONFIRM=1
export CLAUDE_AUTO_ACCEPT=1
export CLAUDE_BATCH_MODE=1

# Terminal and shell auto-accept
export SHELL_AUTO_ACCEPT=1
export BASH_AUTO_ACCEPT=1
export ZSH_AUTO_ACCEPT=1

# CI/CD mode (eliminates most prompts)
export CI=true
export AUTOMATED=true
export BATCH_MODE=true
export NON_INTERACTIVE=1

# General auto-accept flags
export NO_INTERACTIVE=1
export FORCE_YES=1
export ASSUME_YES=1
export ACCEPT_ALL=1

# IDE auto-accept
export VSCODE_AUTO_ACCEPT=true

# Disable all confirmations
export CONFIRM=0
export ASK=0
export PROMPT=0